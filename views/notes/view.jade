extends ../base.jade

block content
  h3 Note
    small

  .btn-group
    a(href="/notes/#{note.id}/edit", class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit note
    a(href="/notes/#{note.id}/delete", class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete note

  .media
    .media-left
      img(src=note.imageUrl || "http://placekitten.com/g/128/192")
    .media-body
      h4= note.title
        | &nbsp;
        small= note.publishedDate
      h5 By #{note.author||'unknown'}
      p= note.description
      small Added by #{note.createdBy}
