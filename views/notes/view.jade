extends ../base.jade

block content
  h3 Note
    small

  .btn-group
    a(href="/notes/#{note.id}/edit", class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit note
    a(href="/notes/#{note.id}/delete", class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete note

  .media(style="background-color:#eee;padding:10px;")
    .media-body
      div(style="font-size:20px;") #{note.title}
      div
        if note.url != ''
          span(style="font-weight:bold;") url:
          div
            a(href=note.url target="_blank") #{note.url}
      div(style="margin-top:10px;")
        span(style="font-weight:bold;") description:
        if note.description != ''
          div(style="white-space: pre-wrap;") #{note.description}
        else
          div(style="white-space: pre-wrap;") No description.
